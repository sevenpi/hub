#!/bin/bash

#------------------------------------------------------------------------------
# SSH.
#------------------------------------------------------------------------------
ssh_key=~/.ssh/id_rsa
function init()
{
    eval "$(ssh-agent -s)"
    ssh-add $ssh_key
}

#------------------------------------------------------------------------------
# Git.
#------------------------------------------------------------------------------
alias gl='git log --graph --oneline --decorate --all'
alias gst='git status'
alias gd='git diff'
alias gp='git pull && git push'
function gc() { git commit -m "$1"; }
function gca() { git commit -a -m "$1"; }

#------------------------------------------------------------------------------
# Path.
#------------------------------------------------------------------------------
export PATH=$HOME/Desktop/data/hub/bin:$PATH

