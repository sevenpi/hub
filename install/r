#!/bin/bash  

#------------------------------------------------------------------------------
# R.
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Configuration.
#------------------------------------------------------------------------------
message='Install R'
print_message "$message"

#------------------------------------------------------------------------------
# Apt-get packages.
#------------------------------------------------------------------------------
packages=(

r-base-core
r-base
r-base-dev
python-rpy2
python3-rpy2

)

#------------------------------------------------------------------------------
# R packages.
#------------------------------------------------------------------------------
rpackages=(
)

#------------------------------------------------------------------------------
# Operation.
#------------------------------------------------------------------------------
