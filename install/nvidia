#!/bin/bash  

#------------------------------------------------------------------------------
# Graphics Card Driver.
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Configuration.
#------------------------------------------------------------------------------
version=381
repo=graphics-drivers/ppa
message="Install Nvidia Driver (Version $version)"

#------------------------------------------------------------------------------
# Operation.
#------------------------------------------------------------------------------
print_message "$message"
add-apt-repository -y ppa:$repo
apt-get update
aptget nvidia-$version

