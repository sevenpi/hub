#!/bin/bash

#------------------------------------------------------------------------------
# Google Chrome.
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Configuration.
#------------------------------------------------------------------------------
filename=google-chrome-stable_current_amd64.deb
url=https://dl.google.com/linux/direct/$filename
message='Install Google Chrome'

#------------------------------------------------------------------------------
# Pre-requisite Packages.
#------------------------------------------------------------------------------
packages=(

libindicator7
libappindicator1

)
print_message "$message"
aptget ${packages[@]}

#------------------------------------------------------------------------------
# Download and install.
#------------------------------------------------------------------------------
wget $url
dpkg -i $filename
rm -f $filename

