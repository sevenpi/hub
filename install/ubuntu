#!/bin/bash  

#------------------------------------------------------------------------------
#
# Configure the complete system in Ubuntu after fresh installation.
# Expects to run as Superuser.
#
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Configuration.
#------------------------------------------------------------------------------
install_dir="$HOME/Desktop/data/hub/install"

#------------------------------------------------------------------------------
# Basic Utility.
#------------------------------------------------------------------------------

function print_message
{
    printf "\n"
    printf "%0.s-" {1..80}
    printf "\n-- $1\n"
    printf "%0.s-" {1..80}
    printf "\n"
}

function aptget
{
    apt-get -f install -y "$@"
}

#------------------------------------------------------------------------------
# Sequence of operation.
#------------------------------------------------------------------------------
operations=(

update
#nvidia
#chrome
basic

)

#------------------------------------------------------------------------------
# Operation.
#------------------------------------------------------------------------------
. $install_dir/util.sh
wd=$PWD
clear
cd /tmp
for o in ${operations[@]}
do
    . $install_dir/$o
done
printf '\n'
cd $wd
