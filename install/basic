#!/bin/bash  

#------------------------------------------------------------------------------
# Basic Ubuntu Package.
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Configuration.
#------------------------------------------------------------------------------
message="Install Basic Ubuntu packages"
data_dir=$HOME/Desktop/data
hub_dir=$data_dir/hub

#------------------------------------------------------------------------------
# Packages.
#------------------------------------------------------------------------------
packages=(

git
emacs

)

#------------------------------------------------------------------------------
# Operation.
#------------------------------------------------------------------------------
print_message "$message"
aptget ${packages[@]}

rm $HOME/.gitconfig
ln -s $hub_dir/config/gitconfig $HOME/.gitconfig
chown clement:clement $HOME/.gitconfig
